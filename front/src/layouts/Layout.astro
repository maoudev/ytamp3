---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <meta
      name="keywords"
      content="youtube, mp3, converter, download, video, audio, gratis, en línea, youtube a mp3"
    />
    <meta name="viewport" content="width=device-width" />

    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content="Convierte y descarga cualquier vídeo de YouTube a MP3 de forma rápida y fácil con nuestro convertidor gratuito en línea"
    />
    <link rel="shortcut icon" href="/favicon.png" type="image/png" />
    <link rel="icon" href="favicon.png" type="image/png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="dark:bg-[rgb(8,8,8)]">
    <div id="bg-circles" class="">
      <div id="circle" class="top-56 right-0 lg:left-32 blur-2xl bg-red-700">
      </div>
      <div id="circle" class="lg:right-9 bottom-3 blur-2xl bg-red-700"></div>
      <div id="circle" class="lg:right-96 blur-2xl bg-red-700"></div>
    </div>
    <Header />
    <slot />
    <Footer />

    <style is:global>
      @font-face {
        font-family: "Subjectivity-Black";
        src: url("/fonts/Subjectivity-Black.woff2") format("woff2");
      }

      @font-face {
        font-family: "Subjectivity-Regular";
        src: url("/fonts/Subjectivity-Regular.woff2") format("woff2");
      }

      @font-face {
        font-family: "Subjectivity-Bold";
        src: url("/fonts/Subjectivity-Bold.woff2") format("woff2");
      }

      @font-face {
        font-family: "Subjectivity-Light";
        src: url("/fonts/Subjectivity-Light.woff2") format("woff2");
      }

      html {
        font-family: system-ui, sans-serif;
        min-height: 100%;
        position: relative;
      }

      code {
        font-family:
          Menlo,
          Monaco,
          Lucida Console,
          Liberation Mono,
          DejaVu Sans Mono,
          Bitstream Vera Sans Mono,
          Courier New,
          monospace;
      }

      #bg-circles {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        z-index: -20;
      }

      #circle {
        position: absolute;
        width: 200px;
        height: 200px;
        border-radius: 50%;

        opacity: 0.2;

        justify-content: space-evenly;
      }

      @media (min-width: 1024px) {
        #circle {
          width: 300px;
          height: 300px;
        }
      }
    </style>
  </body>
</html>
